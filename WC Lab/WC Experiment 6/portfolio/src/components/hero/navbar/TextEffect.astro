<h1 data-value="Dyotak" class="h-full w-[100px] lg:w-[120px]">Dyotak</h1>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@900&display=swap");

  h1 {
    font-family: "Roboto Slab", serif;
    color: black;
    font-size: 1.75rem;
    font-weight: bolder;
    user-select: none;
    cursor: pointer;
  }
</style>

<script>
const letters = "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz";

let interval = null;
let h1Element = document.querySelector("h1");

let animate = () =>  {
  let iteration = 0;
  clearInterval(interval);

  function animateText() {
    h1Element.innerText = h1Element.innerText.split("").map((letter, index) => {
      if (index < iteration) {
        return h1Element.dataset.value[index];
      }
      return letters[Math.floor(Math.random() * 26)];
    }).join("");

    if (iteration >= h1Element.dataset.value.length) {
      return;
    }

    iteration += 1 / 3; 
    setTimeout(() => requestAnimationFrame(animateText), 30); 
  }

  requestAnimationFrame(animateText);
}

h1Element.addEventListener("mouseover", animate);
document.addEventListener("DOMContentLoaded", () => {
  setTimeout(animate, 100)});

</script>
